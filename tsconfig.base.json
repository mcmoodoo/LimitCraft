{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-jsx",

    // Modules
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    // Emit
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    // Skip Lib Check - helps with workspace cross-imports
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Path Mappings for Workspace
    "paths": {
      "@orderbook/api/*": ["./api/src/*"],
      "@orderbook/db/*": ["./db/src/*"],
      "@orderbook/resolver/*": ["./resolver/src/*"],
      "@orderbook/ui/*": ["./ui/src/*"]
    }
  }
}
