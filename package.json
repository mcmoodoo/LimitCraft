{
  "name": "orderbook",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "bun scripts/index.ts",
    "dev": "concurrently 'bun run dev:api' 'bun run dev:ui'",
    "dev:api": "bun --watch api/src/index.ts",
    "dev:ui": "cd ui && bun run dev",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "build:prod": "bun i && bun run fix && bun run check && bun run clean && bun run build",
    "rebuild": "bun run clean && rm -rf node_modules bun.lock && bun install && bun run build:prod",
    "install:all": "bun install && cd api && bun install && cd ../ui && bun install && cd ../db && bun install && cd ../resolver && bun install && cd .."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@1inch/byte-utils": "^3.1.0",
    "@1inch/limit-order-sdk": "v5.0.3",
    "@types/node": "^24.0.13",
    "ethers": "^6.15.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "concurrently": "^9.2.0"
  }
}
