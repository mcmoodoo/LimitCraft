{
  "name": "limitcraft",
  "version": "1.0.0",
  "description": "LimitCraft - Advanced Limit Order Crafting Platform for DeFi on Arbitrum",
  "private": true,
  "workspaces": [
    "api",
    "db",
    "resolver",
    "ui"
  ],
  "scripts": {
    "dev": "concurrently 'cd api && bun dev' 'cd ui && bun dev'",
    "dev:host": "concurrently 'cd api && bun dev' 'cd ui && bun dev --host'",
    "dev:all": "concurrently 'cd api && bun dev' 'cd ui && bun dev' 'cd resolver && bun dev'",
    "dev:api": "cd api && bun dev",
    "dev:ui": "cd ui && bun dev",
    "dev:resolver": "cd resolver && bun dev",
    "build:api": "cd api && bun run build",
    "build:resolver": "cd resolver && bun run build",
    "build:ui": "cd ui && bun run build",
    "typecheck": "bunx tsc --build --noEmit",
    "typecheck:watch": "bunx tsc --build --watch --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:setup": "cd db && bun run setup",
    "db:studio": "cd db && bun run studio",
    "db:reset": "cd db && bun run reset",
    "resolver:start": "cd resolver && bun run start",
    "clean": "rm -rf node_modules bun.lockb api/node_modules api/bun.lockb db/node_modules db/bun.lockb resolver/node_modules resolver/bun.lockb ui/node_modules ui/bun.lockb ui/dist contracts/out contracts/cache api/dist resolver/dist .next .turbo .cache"
  },
  "keywords": [
    "limitcraft",
    "limit-orders",
    "arbitrum",
    "defi",
    "orderbook",
    "dex",
    "crafting",
    "advanced-trading"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@1inch/byte-utils": "^3.1.0",
    "@1inch/limit-order-sdk": "5.0.3",
    "axios": "^1.10.0",
    "drizzle-orm": "^0.44.3",
    "ethers": "^6.15.0",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "bun-types": "latest",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.8.3"
  }
}
